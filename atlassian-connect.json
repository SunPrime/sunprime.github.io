{
    "key": "lambda-plugin",
    "name": "Lambda Plugin",
    "description": "Decode JIRA issue fields",
    "vendor": {
        "name": "Andriy zhdanov",
        "url": "http://www.lambdaplugin.com"
    },
    "baseUrl": "http://easysecrets.github.io",
    "links": {
        "self": "http://easysecrets.github.io/atlassian-connect.json",
        "homepage": "http://easysecrets.github.io/atlassian-connect.json"
    },
    "authentication": {
        "type": "none"
    },
    "modules": {
        "generalPages": [{
            "location": "find_link/issues_new",
            "name": {
                "value": "Decode issue fields"
            },
            "url": "/search.html",
            "key": "search",
            "conditions": [{
                "condition": "user_is_logged_in"
            }]
        }],
        "jiraDashboardItems": [{
            "name" : {
                "value" : "Lambda"
            },
            "url" : "/search.html?dashboard={dashboard.id}&dashboardItem={dashboardItem.id}",
            "key" : "gadget",
            "description" : {
                "value" : "Decode JIRA issue fields"
            },
            "thumbnailUrl": "/images/lambda-gadget-thumb.png",
            "configurable" : true,
            "conditions": [{
                "condition": "user_is_logged_in"
            }]
        }]
    },
    "scopes": [
        "READ",
        "WRITE"
    ]
}
